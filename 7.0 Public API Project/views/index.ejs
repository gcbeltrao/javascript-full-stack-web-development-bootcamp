<%- include("partials/header.ejs") %>

<body>
  <header>
    <h1 class="heading">My Top Movies</h1>
    <div class="container text-center add">
      <a href="/create" class="button">Add Movie</a>
      <a href="/importUser" class="button">Import User</a>
      <a href="/deleteAll" class="button">Delete All</a>
    </div>
  </header>

  <div class="container">
    <p class="description">These are my all-time favourite movies.</p>
    <% movieList.forEach((movie)=>{ %>
    <div class="card">
      <div class="front" style="background-image: url(<%= movie.imgUrl %>)">
        <p class="large"><%= movie.ranking %></p>
      </div>
      <div class="back">
        <div>
          <div class="title">
            <%= movie.title %>
            <span class="release_date">(<%= movie.year %>)</span>
          </div>
          <div class="rating">
            <label><%= movie.rating %></label>
            <i class="fas fa-star star"></i>
          </div>
          <p class="review"><%= movie.review %></p>
          <p class="overview"><%= movie.description %></p>
          <a href="/movies/<%= movie.id %>" class="button">Update</a>
          <a href="/delete/<%= movie.id %>" class="button">Delete</a>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</body>

<%- include("partials/footer.ejs")%>
